{% extends 'base.html.twig' %}

{% block title %} Formulaire de catégorie {% endblock %}

{% block body %}

    <h1 class="display-4 text-center my-5"> Formulaire de catégorie </h1>

        {{ form_start(formCategory, {'attr' : {'class' : 'col-md-5 mx-auto'} }) }}

            {{ form_row(formCategory.title, {'label' : "Titre de la catégorie :" }) }}
            {{ form_row(formCategory.description, {'label' : "Description :" }) }}
            <button type="submit" class="btn btn-secondary mb-5"> Enregistrer la catégorie </button>

        {{ form_end(formCategory) }}

{% endblock %}